    output            eDP1
    status_command    i3status
    position          bottom
    mode              dock 
    workspace_buttons yes
    tray_output       primary
                                
    font pango:Droid Sans Mono 16
    
    colors {
        background #000000
        statusline #ffffff
        focused_workspace  #ffffff #285577
        active_workspace   #ffffff #333333
        inactive_workspace #888888 #222222
        urgent_workspace   #ffffff #900000
    }
}


